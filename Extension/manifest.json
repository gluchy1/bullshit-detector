

{
    "manifest_version": 3,
    "name": "Bullshit Detector",
    "description": "Clean reader and BS detector for articles",
    "version": "1.0",
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "externally_connectable": {
    "matches": ["<all_urls>"]
    },
    "host_permissions": ["http://*/*","https://*/*"],
    "permissions": ["activeTab", "scripting"]
  }
